{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "func",
			"label": "func: host start",
			"command": "host start",
			"problemMatcher": "$func-watch",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/src/backend-go"
			}
		},
		{
			"label": "Run Local (Dev)",
			"type": "shell",
			"command": "PATH=/opt/homebrew/opt/node@22/bin:$PATH && ./run_local.sh --dev",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"group": "none"
		},
		{
			"label": "Run Local (Prod)",
			"type": "shell",
			"command": "PATH=/opt/homebrew/opt/node@22/bin:$PATH && ./run_local.sh",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"group": "none"
		}
	]
}